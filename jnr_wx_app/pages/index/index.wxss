.home .page-content {
  overflow-y: scroll;
  height: calc(100vh - 165px);
  padding-top: 15px;
}

.home .box {
  padding: 20px;
  padding-top: 0;
}

.home .options {
  margin-bottom: 15px;
  border-radius: 12px;
  position: relative;
}

.home .options .img-bg {
  background-size: cover;
  background-position: center;
  border-radius: 12px;
}

.home .options .tag {
  height: 150px;
  width: 15px;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  border-radius: 12px 0 0 12px;
}

.home .options .card-box {
  position: relative;
  min-height: 130px;
  max-height: 150px;
  border-radius: 12px;
  background-color: #fff;
  color: #0f0f0f;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.home .options .card-box .card {
  height: 130px;
  padding: 10px;
  border-radius: 12px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
  background: linear-gradient(to bottom, rgba(223, 237, 146, 0.18), #fff);
}

.home .options .card-box .name {
  font-size: 16px;
  font-weight: 600;
}

.home .options .card-box .text {
  padding: 5px 5px;
}

.home .options .card-box .refresh {
  font-size: 20px;
}

.home .options .card-box .days {
  text-align: center;
  font-size: 38px;
  font-weight: 600;
  margin-bottom: 14px;
  position: relative;
}

.home .options .card-box .days .gong-title {
  color: #4a4a4a;
  font-size: 13px;
  font-weight: normal;
}

.home .options .card-box .days .num {
  margin-left: 5px;
}

.home .options .card-box .days .text {
  color: #fff;
  min-width: 15px;
  height: 15px;
  position: absolute;
  font-size: 10px;
  font-weight: normal;
  border-radius: 5px;
  padding: 2px 4px;
  margin-left: 3px;
}

.home .options .card-box .bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.home .options .card-box .bottom .img {
  margin-right: 10px;
}

.home .options .card-box .week {
  position: absolute;
  font-size: 12px;
  right: 12px;
}

.home .options .vague {
  background: linear-gradient(to top, #ffffff6b, #fff0);
  width: 100%;
  height: 100%;
}

.home .no-datas {
  background-color: #ffffff;
  height: calc(100vh - 204px);
  text-align: center;
  margin: 10px;
  border-radius: 12px;
  overflow: hidden;
}

.home .no-datas .img {
  display: inline-block;
  width: 350px;
  height: 380px;
  background-size: cover;
  background-position: center;
}

.home .no-datas .operate .text {
  font-size: 26px;
  font-weight: 600;
}

.home .no-datas .operate .refresh {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.home .no-datas .operate .refresh .tips {
  color: #979696;
  padding: 5px 0 50px 0;
  font-size: 14px;
  display: flex;
  align-items: center;
}

.home .no-datas .operate .refresh .add-buttom {
  font-weight: 600;
  font-size: 30px;
  padding-bottom: 6px;
  margin-left: 2px;
}

.home .add-buttom-big {
  position: fixed;
  bottom: 100px;
  right: 22px;
  background-color: #080808;
  width: 70px;
  height: 70px;
  line-height: 60px;
  text-align: center;
  border-radius: 70px;
  font-size: 50px;
  font-weight: 600;
  color: #fff;
}
