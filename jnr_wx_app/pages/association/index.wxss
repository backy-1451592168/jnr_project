.association {
  width: 100%;
  height: 100%;
}

.association .not-association {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: calc(100vh - 200px);
  width: 100%;
}

.association .not-association .img {
  width: 60%;
}

.association .not-association .title {
  color: #a0a0a0;
}

.association .not-association .button {
  color: #fff;
  background-color: #0a0a0a;
  border-radius: 9999px;
  width: 130px;
  height: 32px;
  text-align: center;
  line-height: 32px;
  margin-top: 24px;
  font-size: 14px;
}

.association .wait {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: calc(100vh - 220px);
  width: 100%;
}

.association .wait .img {
  width: 100%;
  height: 60%;
}

.association .wait .title {
  color: #a0a0a0;
}

.association .wait .button {
  color: #fff;
  background-color: #0a0a0a;
  border-radius: 9999px;
  width: 100px;
  height: 34px;
  text-align: center;
  line-height: 32px;
  margin-top: 24px;
  font-size: 14px;
}

.association .wait .cancel {
  padding: 10px;
  padding-top: 6px;
  margin-top: 10px;
  font-size: 14px;
}

.association .refuse {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: calc(100vh - 220px);
  width: 100%;
}

.association .refuse .img {
  width: 100%;
  height: 60%;
}

.association .refuse .title {
  color: #a0a0a0;
}

.association .refuse .button {
  color: #fff;
  background-color: #0a0a0a;
  border-radius: 9999px;
  width: 120px;
  height: 34px;
  text-align: center;
  line-height: 32px;
  margin-top: 24px;
  font-size: 14px;
}

.association .refuse .cancel {
  padding: 10px;
  padding-top: 6px;
  margin-top: 10px;
  font-size: 14px;
}

.association .re-as {
  height: calc(100vh - 150px);
  border-radius: 12px;
  position: relative;
  background-color: #101010;
  margin: 20px 15px;
}

.association .re-as .title {
  color: #fff;
  padding: 20px 20px 0;
}

.association .re-as .title .tip {
  font-size: 12px;
}

.association .re-as .content .info {
  margin-top: 55px;
  text-align: center;
}

.association .re-as .content .info .img {
  width: 80px;
  height: 80px;
  border-radius: 999px;
}

.association .re-as .content .info .name {
  font-size: 18px;
  font-weight: 600;
  color: #fff;
}

.association .re-as .operate {
  position: absolute;
  bottom: 30px;
  display: flex;
  justify-content: center;
  width: 100%;
  color: #fff;
}

.association .re-as .operate .but {
  text-align: center;
  width: 110px;
}

.association .re-as .operate .but .verify {
  height: 40px;
  line-height: 40px;
  background-color: #fff;
  color: #000;
  border-radius: 6px;
}

.association .re-as .operate .but .cancel {
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  margin-top: 14px;
}

.association .mistake {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: calc(100vh - 220px);
  width: 100%;
}

.association .mistake .img {
  width: 80%;
  height: 50%;
}

.association .mistake .title {
  color: #a0a0a0;
}

.association .mistake .button {
  color: #fff;
  background-color: #0a0a0a;
  border-radius: 9999px;
  width: 120px;
  height: 34px;
  text-align: center;
  line-height: 32px;
  margin-top: 24px;
  font-size: 14px;
}

.association .mistake .cancel {
  padding: 10px;
  padding-top: 6px;
  margin-top: 10px;
  font-size: 14px;
}
